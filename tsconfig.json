{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "./node_modules", "./node_modules/*", "./node_modules/@types/node/index.d.ts"]
}
